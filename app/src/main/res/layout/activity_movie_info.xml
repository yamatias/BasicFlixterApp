<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matiash.flixter.MovieInfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPosterBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFilter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvMovieTitle"
        android:textSize="26dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@+id/rbRating"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvOverview"
        android:layout_below="@+id/tvMovieTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:textColor="@color/white"

        android:padding="10dp"
        android:textSize="14sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        android:visibility="visible"
        android:clickable="false"
        android:indeterminateOnly="false"
        android:focusable="false"
        android:isIndicator="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="22dp"
        android:stepSize=".01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/movieAPI_label_2"
        android:id="@+id/tvPopularity"
        android:textColor="@color/white"
        android:layout_marginBottom="81dp"
        android:textStyle="italic"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvRating"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tvPopularity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textStyle="bold"
        android:textSize="30sp" />


</RelativeLayout>
